<div class="col-md-6 col-md-offset-3">
	<% if @thread.errors.any? %>
		<% @thread.errors.full_messages.each do |e| %>
			<div class="alert alert-danger alert-dismissible">
				<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<%= e %></br>
			</div>
		<% end %>
	<% end %>
	<%= form_for @thread do |t| %>
		<div class="form-group">
			<%= t.label :title %></br>
			<%= t.text_field :title, class: 'form_control' %></br>
		</div>
		
		<div class="form-group">
			<%= t.label :content %></br>
			<%= t.text_area :content, rows: 10, class: 'form_control' %></br>
		</div>

		<div class="form-group">
			<%= t.submit "Simpan", class: 'btn btn-success' %>
		</div>
	<% end%>
</div>